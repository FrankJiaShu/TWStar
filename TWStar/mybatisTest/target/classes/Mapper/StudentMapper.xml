<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljh.model.Student">
    <select id="selectStudentById" parameterType="com.ljh.model.Student" resultType="com.ljh.model.Student">
        select * from student
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
        <if test="name != null and name != ''">
            AND name = #{name}
        </if>
        AND password = #{password}
        </where>
    </select>

    <insert id="insertStudent" parameterType="com.ljh.model.Student">
        insert into student (id,name,password) values (#{id},#{name},#{password})
    </insert>

    <delete id="deleteStudentById" parameterType="com.ljh.model.Student">
        delete from student where id = #{id}
    </delete>

    <update id="updateStudentById" parameterType="com.ljh.model.Student">
        update student set name = #{name},password = #{password} where id = #{id}
    </update>
</mapper>